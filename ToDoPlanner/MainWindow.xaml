<Window x:Class="ToDoPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoPlanner"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="450"
        WindowStyle="None"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <GroupBox Header="Login">
            <TextBox MinWidth="150" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="InputTextBox"/>
        </GroupBox>
        <GroupBox Header="Password" Grid.Row="1">
            <PasswordBox HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" Width="262" Height="54" RenderTransformOrigin="0.5,0.5">
                <PasswordBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="-2.059"/>
                        <RotateTransform/>
                        <TranslateTransform X="-0.971"/>
                    </TransformGroup>
                </PasswordBox.RenderTransform>
            </PasswordBox>
        </GroupBox>


    </Grid>
</Window>
